<html>
<head>
    <script src="http://ajax.googleapis.com/ajax/libs/jquery/1.7.1/jquery.min.js"></script>
    <script src="client.js" type="text/javascript"></script>
</head>
<body>
<table id="main_table" border="1" style="width:100%">
    <? table.forEach(function(row){ ?>
    <tr>
        <td><input style="width:100%" type="text" value="<?=row.Id[0]?>"></td>
        <td><input style="width:100%" type="text" value="<?= row.Name[0] ?>"></td>
        <td><input style="width:100%" type="text" value="<?= row.Description[0] ?>"></td>
        <td><select style="width:100%">
                <option <?= (row.Type[0] == "System.String" ? "selected" : "") ?>>System.String</option>
                <option <?= (row.Type[0] == "System.Int32" ? "selected" : "") ?>>System.Int32</option>
                <option <?= (row.Type[0] == "System.Boolean" ? "selected" : "") ?>>System.Boolean</option>
            </select></td>
        <td><input style="width:100%" type="<?= row.Type[0] == 'System.Boolean' ? 'checkbox' : 'text' ?>" <?= (row.Type[0] == "System.Boolean" && row.Value[0].toLowerCase() == "true" ? "checked" : "value=" + row.Value[0] ) ?>></td>
        <td><button style="width:100%" class="remove_row">delete</button></td>
    </tr>
    <? }) ?>
</table>
<button style="width:25%" id="addString">Add string</button> <button id="saveData" style="width:25%">Save data</button>
</body>
</html>